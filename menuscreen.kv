#:import tocolor kivy.utils.get_color_from_hex

<MenuScreen@Screen>:
	name: "menu"
	BoxLayout:
		orientation: "vertical"
		padding: 10
		spacing: 10
		MenuButton:
			text: "Continue"
			disabled: root.manager.currentStory == None
			on_release: app.root.current = "game"
		MenuButton:
			text: "New Game"
			on_release: app.root.current = "new"
		MenuButton:
			text: "Load"
			on_release: app.root.current = "load"
		MenuButton:
			text: "Save"
			disabled: root.manager.currentStory == None
			on_release: app.root.current = "save"
		# for now no options are available
		# Button:
		# 	text: "Options"
		# 	on_release: app.root.current = "options"
		MenuButton:
			text: "Quit"
			on_release: app.stop()

<MenuButton@ChangeScreenButton>: