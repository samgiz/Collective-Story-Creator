RootWidget:
	current: self.last_screen[-1]
	MenuScreen:
	PauseScreen:
	GameScreen:
	OptionsScreen:

<MenuScreen>:
	name: "menu"
	BoxLayout:
		orientation: 'vertical'
		Button:
			text: "Continue"
			on_release: app.root.current = "game"
		Button:
			text: "New Game"
			on_release: app.root.current = "game"
		Button:
			text: "Options"
			on_release: app.root.current = "options"
		Button:
			text: "Quit"
			on_release: app.stop()

<PauseScreen>:
	name: "pause"
	BoxLayout:
		orientation: 'vertical'
		BackButton:
